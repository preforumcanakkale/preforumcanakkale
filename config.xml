<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.preforumcanakkale" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Preforum Çanakkale</name>
    <description>
        28. Ulusal Leo Preforumu "Preforum Çanakkale"
    </description>
    <author email="preforumcanakkale@gmail.com" href="http://preforumcanakkale.org">
        Preforum Çanakkale Development Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="www/res/icon/icon.png" />
    <splash src="www/res/icon/splash.png" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <icon density="ldpi" src="www/res/icon/android/ldpi.png" />
        <icon density="mdpi" src="www/res/icon/android/mdpi.png" />
        <icon density="hdpi" src="www/res/icon/android/hdpi.png" />
        <icon density="xhdpi" src="www/res/icon/android/xhdpi.png" />
        <icon density="xxhdpi" src="www/res/icon/android/xxhdpi.png" />
        <icon density="xxxhdpi" src="www/res/icon/android/xxxhdpi.png" />
        <splash density="port-ldpi" src="www/res/icon/android/splash-port-ldpi.png" />
        <splash density="port-hdpi" src="www/res/icon/android/splash-port-hdpi.png" />
        <splash density="port-mdpi" src="www/res/icon/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="www/res/icon/android/splash-port-xhdpi.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
        <icon height="180" src="www/res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="www/res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="www/res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="www/res/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="www/res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="www/res/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="www/res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="57" src="www/res/icon/ios/icon.png" width="57" />
        <icon height="114" src="www/res/icon/ios/icon@2x.png" width="114" />
        <icon height="72" src="www/res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="www/res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="29" src="www/res/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="www/res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="50" src="www/res/icon/ios/icon-50.png" width="50" />
        <icon height="100" src="www/res/icon/ios/icon-50@2x.png" width="100" />
        <splash height="480" src="www/res/icon/ios/Default~iphone.png" width="320" />
        <splash height="960" src="www/res/icon/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="www/res/icon/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="www/res/icon/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="1136" src="www/res/icon/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="www/res/icon/ios/Default-667h.png" width="750" />
        <splash height="2208" src="www/res/icon/ios/Default-736h.png" width="1242" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackgroundColor" value="0xFFFFFFFF" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <plugin name="phonegap-plugin-push" spec="~2.0.0">
        <variable name="SENDER_ID" value="375914529258" />
    </plugin>
</widget>
